<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base app theme -->
    <style name="AppTheme" parent="Theme.Project">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <!-- Button Style -->
    <style name="PrimaryButton">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle">
        <item name="android:background">@drawable/input_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="RatingBarStyle" parent="@android:style/Widget.Material.RatingBar">
        <item name="android:progressTint">@color/gold</item>
    </style>


</resources>
