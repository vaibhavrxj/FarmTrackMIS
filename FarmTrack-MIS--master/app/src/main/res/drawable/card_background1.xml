<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/white"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Shadow Effect -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Stroke border -->
    <stroke
        android:color="@color/blue"
        android:width="2dp"/>

</shape>
